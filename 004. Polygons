#include<bits/stdc++.h>
using namespace std;

typedef long long int ll;
typedef unsigned long long int llu;
typedef double dl;

#define endl '\n'
#define PI acos(-1)
#define vi vector<int>
#define vll vector<ll>
#define vii vector<pair<int,int>>


int main()
{
    ios_base::sync_with_stdio(0);cin.tie(0);cout.tie();
    ll t;
    cin>>t;
    while(t--)
    {
        ll n;
        cin>>n;
        if(n==3){
            cout<<180<<endl;
        }else if(n==4){
           cout<<360<<endl;
        }else{
           cout<<(n-4)*180+360<<endl;
        }
    }

    return 0;
}

