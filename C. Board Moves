#include<bits/stdc++.h>
using namespace std;

typedef long long int ll;
typedef unsigned long long int llu;
typedef double dl;

#define endl '\n'
#define PI acos(-1)
#define vi vector<int>
#define vll vector<ll>
#define vii vector<pair<int,int>>


int main()
{
  ios_base::sync_with_stdio(0);cin.tie(0);cout.tie();
   ll tc,i,n;
   cin>>tc;
   while(tc--)
   {
       cin>>n;
       ll sum=0,flag=3;
       for(i=1; i<=n/2; i++)
       {
           sum+=((flag*4-4)*i);
           flag+=2;
       }
       cout<<sum<<endl;
   }

    return 0;
}

