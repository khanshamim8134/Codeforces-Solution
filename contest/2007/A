#include<bits/stdc++.h>
using namespace std;

typedef long long int ll;
typedef unsigned long long int llu;
typedef double dl;

#define endl '\n'
#define PI acos(-1)
#define vi vector<int>
#define vll vector<ll>
#define vii vector<pair<int,int>>


int main()
{
  ios_base::sync_with_stdio(0);cin.tie(0);cout.tie();
   ll t,a,b,c;
   cin>>t;
   while(t--)
   {
       cin>>a>>b;
       if(a%2!=0 || b%2!=0){
        c = 1;
       }else{
         c = 0;
       }
       ll k = c+((b-a)/2);
       cout<<k/2<<endl;

   }

    return 0;
}
