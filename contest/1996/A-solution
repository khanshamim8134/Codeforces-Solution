#include<bits/stdc++.h>
using namespace std;

typedef long long int ll;
typedef unsigned long long int llu;
typedef double dl;

#define endl '\n'
#define PI acos(-1)
#define vi vector<int>
#define vll vector<ll>
#define vii vector<pair<int,int>>


int main()
{
  ios_base::sync_with_stdio(0);cin.tie(0);cout.tie();
   int t;
   cin>>t;
   while(t--)
   {
       int n;
       cin>>n;
       if(n==2){
        cout<<"1\n";
       }else{
           int t = n/4;
           n = n%4;
        cout<<t+(n/2)<<endl;
       }
   }

    return 0;
}

